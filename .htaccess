# --- opções ---
Options -Indexes
Options -MultiViews

RewriteEngine On
RewriteBase /

ErrorDocument 404 /404.php

# --- regras personalizadas primeiro ---
# detalhe da notícia (slug)
RewriteRule ^noticias/([^/]+)/?$ noticia.php?slug=$1 [L,QSA,NC]

# lista de notícias
RewriteRule ^noticias/?$ noticias.php [L,NC]

# outras páginas
RewriteRule ^sobre/?$ sobre.php [L]
RewriteRule ^medicos/?$ medicos.php [L]
RewriteRule ^servicos/?$ servicos.php [L]
RewriteRule ^transparencia/?$ transparencia.php [L]
RewriteRule ^contato/?$ contato.php [L]

# --- só no final: se for arquivo/pasta real, não reescreve ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
